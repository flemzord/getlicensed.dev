{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".output/**",
        ".histoire/**"
      ]
    },
    "generate" : {
      "dependsOn": ["^generate"],
      "outputs": [
        "dist/**",
        ".output/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": true,
      "persistent": true
    },
    "db:migrate": {
      "cache": false
    }
  }
}
